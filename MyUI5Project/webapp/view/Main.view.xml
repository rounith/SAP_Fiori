<core:View xmlns:core2="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core.mvc" xmlns:t="sap.ui.table"
			xmlns="sap.m" controllerName="cloud4c.fiori.controller.Main">
	<f:SimpleForm editable="true" id="simpleForm">
		<Label text="EmpID"></Label>
		<Input width="40%" id="idId" value="{/empStr/empId}" enabled="{/empStr/status}"></Input>
		<Label text="EmpName"></Label>
		<Input width="40%"  id="idName" value="{/empStr/empName}" enabled="{/empStr/status}"></Input>
		<Label text="Salary"></Label>
		<Input width="40%" id="idSalary" value="{= ${/empStr/empName} === 'Vijay' ? 500000 : 50}" enabled="{/empStr/status}" />
		<Label text="Currency"></Label>
		<Input width="40%" id="idCurr" value="{/empStr/currency}" enabled="{/empStr/status}"></Input>
        <Label></Label>
		<Button text="Click Me" width="40%" press="Magic"></Button>
		<Label></Label>
		<Button text="SampleJSON" width="40%" id="sample" press="Switch"></Button>
		<Button text="MulModelJSON" width="40%" id="mulModel" press="MulSwitch"></Button>
	</f:SimpleForm>
	<t:Table rows="{/empTab}" alternateRowColors="true" selectionMode="Single" visibleRowCount="3">
		<t:columns>
			<t:Column label="EmpID">
				<t:template>
					<Text text="{empId}"></Text>
				</t:template>
			</t:Column>
			<t:Column label="EmpName">
				<t:template>
					<Input value="{empName}"></Input>
				</t:template>
			</t:Column>
			<t:Column label="Salary">
				<t:template>
					<Text text="{currency} {salary}"></Text>
				</t:template>
			</t:Column>
			<t:Column label="Smoking">
				<t:template>
					<CheckBox selected="{smoker}"></CheckBox>
				</t:template>
			</t:Column>
			<t:Column label="Rating">
				<t:template>
					<RatingIndicator value="{rating}"></RatingIndicator>
				</t:template>
			</t:Column>
			<t:Column label="Martial Status">
				<t:template>
					<ComboBox selectedKey="{mStat}">
						<items>
							<core2:Item key="Single" text="Single"></core2:Item>
							<core2:Item key="Married" text="Married"></core2:Item>
							<core2:Item key="Divorced" text="Divorced"></core2:Item>
						</items>
					</ComboBox>
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
</core:View>

<!-- **** when you multiple models to bind data use > this with model name 
to get data from that model if not used then it will take default model
For example: {/empStr/empId} (This will take data from default model)
			 {iron>/empStr/empId} (This will take data from iron named model)-->

